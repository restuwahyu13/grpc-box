{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"sourceMap": false,
		"strict": false,
		"alwaysStrict": false,
		"noImplicitAny": false,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "dist"]
}
